<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/cardview_horizontal_margin"
    android:layout_marginRight="@dimen/cardview_horizontal_margin"
    android:layout_marginTop="@dimen/cardview_vertical_margin"
    app:cardCornerRadius="4dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:stateListAnimator="@anim/item_raise"
    >

    <LinearLayout
        android:id="@+id/item_layout_Linear_cardview_all"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/item_layout_Linear_cardview_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            >

            <!--商家基本信息-->
            <LinearLayout
                android:id="@+id/item_layout_Linear_cardview_shop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:id="@+id/item_layout_Linear_cardview_shopname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:id="@+id/item_textview_shopname"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:layout_marginLeft="@dimen/cardview_horizontal_margin"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:text="@string/location_textview_shopname"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/item_layout_Linear_cardview_shoprating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    >

                    <RatingBar
                        android:id="@+id/item_ratingbar_shoprating"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/cardview_horizontal_margin"
                        android:numStars="5"
                        android:rating="3.5"
                        android:stepSize="0.5"
                        style="?android:attr/ratingBarStyleSmall"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/item_layout_Linear_cardview_shopkind"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        >

                        <TextView
                            android:id="@+id/item_textview_average"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/cardview_horizontal_margin"
                            android:text="@string/location_textview_shopaverage"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        >

                        <TextView
                            android:id="@+id/item_textview_shopkind"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/cardview_horizontal_margin"
                            android:text="@string/location_textview_shopkind"
                            />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!--商家照片预览-->
            <LinearLayout
                android:id="@+id/item_layout_Linear_cardview_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >



            </LinearLayout>

        </LinearLayout>

        <!--商家地址信息-->
        <LinearLayout
            android:id="@+id/item_layout_Linear_cardview_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            >

            <TextView
                android:id="@+id/item_textview_cardview_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/cardview_horizontal_margin"
                android:layout_marginLeft="@dimen/cardview_horizontal_margin"
                android:text="@string/location_textview_shopaddress"
                />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
